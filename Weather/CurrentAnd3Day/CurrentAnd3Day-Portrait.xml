<?xml version="1.0" encoding="UTF-8"?>
<Template>
    <Style>
        <![CDATA[
        #outer {
            width: 100%;
            height: 100%;
            padding: 10px;
            box-sizing: border-box;
        }
        #info {
            padding-bottom: 10px;
        }
        #days {
            height: 75%;
        }
        #currentDay {
            height: 28%;
        }
        #days > div {
            overflow: hidden;	/* Expand to contain floated image. */
            clear: left;
        }
        #day1, #day2, #day3 {
            height: 24%;
        }
        .wrapper {
            display: table;
            height: 100%;
            padding: 10px;
        }
        .wrapper > div {
            display: table-cell;
            vertical-align: middle;
        }
        .currentIcon, .icon {
            max-height: 100%;
            float: left;
        }
        ]]>
    </Style>
    <Layout>
        <![CDATA[
        <div id="outer">
            <div id="info">
                <div id="city" class="address_font-style"></div>
                <div id="humidityAndWind">
                    <div id="humidity" class="other_font-style"></div>
                    <div id="wind" class="other_font-style"></div>
                </div>
            </div>
            <div id="days">
                <div id="currentDay">
                    <img src="" class="currentIcon" />
                    <div class="wrapper">
                        <div>
                            <span class="temp_font-style currentTemp"></span>
                        </div>
                    </div>
                </div>
                <div id="day1">
                    <img src="" class="icon" />
                    <div class="wrapper">
                        <div>
                            <span class="forecastDay_font-style day"></span><br />
                            <span class="forecastTemp_font-style temp"></span>
                        </div>
                    </div>
                </div>
                <div id="day2">
                    <img src="" class="icon" />
                    <div class="wrapper">
                        <div>
                            <span class="forecastDay_font-style day"></span><br />
                            <span class="forecastTemp_font-style temp"></span>
                        </div>
                    </div>
                </div>
                <div id="day3">
                    <img src="" class="icon" />
                    <div class="wrapper">
                        <div>
                            <span class="forecastDay_font-style day"></span><br />
                            <span class="forecastTemp_font-style temp"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        ]]>
    </Layout>
</Template>
