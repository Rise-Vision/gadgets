<?xml version="1.0" encoding="UTF-8"?>
<Template>
    <Style>
        <![CDATA[
        #outer {
            width: 100%;
            height: 100%;
            padding: 10px;
            box-sizing: border-box;
        }
        #info {
            padding-bottom: 10px;
        }
        #days {
            overflow: hidden;	/* Expand to contain floated image. */
            height: 75%;
            width: 100%;
        }
        .wrapper, .currentTemp {
            text-align: center;
        }
        .currentIcon {
            max-height: 100%;
            max-width: 100%;
        }
        ]]>
    </Style>
    <Layout>
        <![CDATA[
        <div id="outer">
            <div id="info">
                <div id="city" class="address_font-style"></div>
                <div id="humidityAndWind">
                    <div id="humidity" class="other_font-style"></div>
                    <div id="wind" class="other_font-style"></div>
                </div>
            </div>
            <div id="days">
                <div class="wrapper">
                    <img src="" class="currentIcon" />
                </div>
                <div class="temp_font-style currentTemp"></div>
            </div>
        </div>
        ]]>
    </Layout>
</Template>
